<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaProgreso2CamiloBrazales.Views.Page2"
             Title="Matriz con Nombres">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <BoxView Color="Green" Grid.Row="0" Grid.Column="0" />
        <Label Text="Camilo" Grid.Row="0" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center" FontSize="32"/>
        <BoxView Color="CornflowerBlue" Grid.Row="0" Grid.Column="1"/>
        <Label Text="Andres" Grid.Row="0" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" FontSize="32"/>
        <BoxView Color="Yellow" Grid.Row="1" Grid.Column="0"/>
        <Label Text="Brazales" Grid.Row="1" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center" FontSize="32"/>
        <BoxView Color="Pink"  Grid.Row="1" Grid.Column="1"/>
        <Label Text="Barrero" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" FontSize="32"/>

    </Grid>
</ContentPage>